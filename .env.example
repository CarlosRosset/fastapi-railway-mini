# Configuração do Ambiente

# Nome do projeto (opcional)
PROJECT_NAME="Template Railway FastAPI"

# URL de conexão com o banco de dados
# Formato para desenvolvimento local
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/template_fastapi

# No Railway, use este formato (o Railway já fornece a variável DATABASE_URL):
# DATABASE_URL="${{DATABASE_URL}}"

# Configurações de JWT
JWT_SECRET=sua-chave-jwt-segura-aqui
JWT_ALGORITHM=HS256
JWT_EXPIRATION=30  # Tempo de expiração em minutos

# Modo de debug (true para desenvolvimento, false para produção)
DEBUG=true